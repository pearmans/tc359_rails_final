<h1>Listing posts</h1>

<%= link_to "Title", sort: "title" %>
<%= link_to "Date Created", sort: "created_at" %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Category1</th>
      <th>Category2</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td><%= post.category1 %></td>
        <td><%= post.category2 %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
